#!/bin/bash

# edit this entry to specify your target directory
directory=/home/fusion-linux
freespace=`df -h $directory |grep /dev| awk '{print $4 }'| awk 'sub(".$", "")'`
echo $freespace

awk '{if ($freespace > 10) echo -e "\nYour chosen target partition has over 10GB of free space, save to continue.\n"; else echo -e "\nNot enough free space, make sure your target partition has over 10GB of free space.\n"}'

echo blllleeee
